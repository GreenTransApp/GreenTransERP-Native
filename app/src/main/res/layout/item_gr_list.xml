<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="index"
            type="Integer" />
        <variable
            name="grModel"
            type="com.greensoft.greentranserpnative.ui.operation.grList.models.GrListModel" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/sNo"
            android:layout_width="50sp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/table_content_cell_bg"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="@{String.valueOf(index+1)}"
            />


        <TextView
            android:id="@+id/grNo"
            android:layout_width="100sp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/black"
            android:background="@drawable/table_content_cell_bg"
            android:textSize="12sp"
            android:text="@{String.valueOf(grModel.grno)}"
            />


        <TextView
            android:id="@+id/grDate"
            android:layout_width="100sp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/black"
            android:background="@drawable/table_content_cell_bg"
            android:textSize="12sp"
            android:text="@{String.valueOf(grModel.grdt)}"
            />

        <TextView
            android:id="@+id/originName"
            android:layout_width="200sp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/black"
            android:background="@drawable/table_content_cell_bg"
            android:textSize="12sp"
            android:text="@{String.valueOf(grModel.origin)}"
            />

        <TextView
            android:id="@+id/destName"
            android:layout_width="200sp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/black"
            android:background="@drawable/table_content_cell_bg"
            android:textSize="12sp"
            android:text="@{String.valueOf(grModel.destname)}"
            />

        <TextView
            android:id="@+id/customerName"
            android:layout_width="200sp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/black"
            android:background="@drawable/table_content_cell_bg"
            android:textSize="12sp"
            android:text="@{String.valueOf(grModel.custname)}"
            />

        <TextView
            android:id="@+id/cngrName"
            android:layout_width="200sp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/black"
            android:background="@drawable/table_content_cell_bg"
            android:textSize="12sp"
            android:text="@{String.valueOf(grModel.cngr)}"
            />

        <TextView
            android:id="@+id/cngeName"
            android:layout_width="200sp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/black"
            android:background="@drawable/table_content_cell_bg"
            android:textSize="12sp"
            android:text="@{String.valueOf(grModel.cnge)}"
            />

<!--        <TextView-->
<!--            android:id="@+id/partName"-->
<!--            android:layout_width="200sp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:gravity="center_horizontal|center_vertical"-->
<!--            android:textColor="@color/black"-->
<!--            android:background="@drawable/table_content_cell_bg"-->
<!--            android:textSize="12sp" />-->

        <TextView
            android:id="@+id/saleType"
            android:layout_width="100sp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/black"
            android:background="@drawable/table_content_cell_bg"
            android:textSize="12sp"
            android:text="@{String.valueOf(grModel.grtype)}"
            />

        <TextView
            android:id="@+id/loadType"
            android:layout_width="100sp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/black"
            android:background="@drawable/table_content_cell_bg"
            android:textSize="12sp"
            android:text="@{String.valueOf(grModel.loadtype)}"
            />

        <TextView
            android:id="@+id/vehicleNo"
            android:layout_width="100sp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/black"
            android:background="@drawable/table_content_cell_bg"
            android:textSize="12sp"
            android:text="@{String.valueOf(grModel.flightno)}"
            />

        <TextView
            android:id="@+id/pckgs"
            android:layout_width="100sp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/black"
            android:background="@drawable/table_content_cell_bg"
            android:textSize="12sp"
            android:text="@{String.valueOf(grModel.pckgs)}"
            />

        <TextView
            android:id="@+id/freight"
            android:layout_width="100sp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/black"
            android:background="@drawable/table_content_cell_bg"
            android:textSize="12sp"
            android:text="@{String.valueOf(grModel.freight)}"
            />

        <TextView
            android:id="@+id/otherCharges"
            android:layout_width="100sp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/black"
            android:background="@drawable/table_content_cell_bg"
            android:textSize="12sp"
            android:text="@{String.valueOf(grModel.oamount)}"
            />

        <TextView
            android:id="@+id/amount"
            android:layout_width="100sp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/black"
            android:background="@drawable/table_content_cell_bg"
            android:textSize="12sp"
            android:text="@{String.valueOf(grModel.tamount)}"
            />

        <TextView
            android:id="@+id/ewayBillNo"
            android:layout_width="130sp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/black"
            android:background="@drawable/table_content_cell_bg"
            android:textSize="12sp"
            android:text="@{String.valueOf(grModel.ewaybillno)}"
            />

        <RelativeLayout
            android:layout_width="150sp"
            android:background="@drawable/table_content_cell_bg"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/scanBtn"
                android:text="Scan &amp; Load"
                android:textSize="10sp"
                android:textAllCaps="false"
                app:cornerRadius="10sp"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="150sp"
            android:background="@drawable/table_content_cell_bg"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/printBtn"
                android:text="Print Sticker"
                android:textSize="10sp"
                android:textAllCaps="false"
                app:cornerRadius="10sp"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                />

        </RelativeLayout>

    </LinearLayout>
</layout>