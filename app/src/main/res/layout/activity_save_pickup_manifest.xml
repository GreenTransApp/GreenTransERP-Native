<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.operation.pickup_manifest.SavePickupManifestActivity">

        <LinearLayout
            android:id="@+id/layout_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical">
            <include
                layout="@layout/toolbar"
                android:id="@+id/toolBar"
                >
            </include>
        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_tool_bar"
            app:layout_constraintBottom_toTopOf="@+id/btn_save"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/colorPrimary"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_below="@+id/toolBar"
                        android:id="@+id/search_layout"
                        android:layout_width="match_parent"
                        android:layout_height="45sp"
                        android:layout_margin="6sp">

                        <androidx.appcompat.widget.SearchView
                            android:id="@+id/search_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            app:queryHint="Search here..." />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                                <TextView
                                    android:id="@+id/sNo_txt"
                                    android:layout_width="50sp"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/white"
                                    android:text="S#"
                                    android:background="@drawable/table_header_cell_bg"
                                    android:textSize="12sp" />



                                <TextView
                                    android:id="@+id/gr_no_txt"
                                    android:layout_width="150sp"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/white"
                                    android:background="@drawable/table_header_cell_bg"
                                    android:text="GR#"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/allocated_dt_txt"
                                    android:layout_width="150sp"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/white"
                                    android:background="@drawable/table_header_cell_bg"
                                    android:text="Allocate Date"
                                    android:textSize="12sp" />


                                <TextView
                                    android:id="@+id/cust_txt"
                                    android:layout_width="200sp"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/white"
                                    android:background="@drawable/table_header_cell_bg"
                                    android:text="Customer"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/cngr_txt"
                                    android:layout_width="200sp"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/white"
                                    android:background="@drawable/table_header_cell_bg"
                                    android:text="Consignor"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/cnge_txt"
                                    android:layout_width="200sp"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/white"
                                    android:background="@drawable/table_header_cell_bg"
                                    android:text="Consignee"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/destination_txt"
                                    android:layout_width="200sp"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/white"
                                    android:background="@drawable/table_header_cell_bg"
                                    android:text="Destination"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/content_txt"
                                    android:layout_width="200sp"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/white"
                                    android:background="@drawable/table_header_cell_bg"
                                    android:text="Content"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/packing_txt"
                                    android:layout_width="150sp"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/white"
                                    android:background="@drawable/table_header_cell_bg"
                                    android:text="Packing"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/balance_pckgs_txt"
                                    android:layout_width="150sp"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/white"
                                    android:background="@drawable/table_header_cell_bg"
                                    android:text="Balance Pckgs"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/pckgs_txt"
                                    android:layout_width="150sp"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/white"
                                    android:background="@drawable/table_header_cell_bg"
                                    android:text="Pckgs"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/g_weight_txt"
                                    android:layout_width="150sp"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/white"
                                    android:background="@drawable/table_header_cell_bg"
                                    android:text="Gross Weight"
                                    android:textSize="12sp" />



                                <TextView
                                    android:id="@+id/action_txt"
                                    android:layout_width="150sp"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/white"
                                    android:background="@drawable/table_header_cell_bg"
                                    android:text="Action"
                                    android:textSize="12sp" />

                            </LinearLayout>


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/period"
                                tools:listitem="@layout/save_pickup_manifest_item" />
                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>
            </LinearLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/refresh_layout"
            android:padding="15dp"
            android:text="SAVE"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>