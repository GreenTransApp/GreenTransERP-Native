<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.operation.delivery.DeliveryOptionActivity">
        <include
            layout="@layout/toolbar"
            android:id="@+id/toolBar" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_scan_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolBar"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="15dp"
            android:text="Scan And Delivery"
            app:cornerRadius="10dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pod_entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_scan_delivery"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="15dp"
            android:text="POD Entry"
            app:cornerRadius="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>