<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:padding="10sp"
        android:id="@+id/company_logo"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="100dp">
    </ImageView>

<!--    <View-->
<!--        android:id="@+id/line_below_logo"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="2dp"-->
<!--        android:layout_marginHorizontal="35dp"-->
<!--        android:layout_marginVertical="5dp"-->
<!--        app:layout_constraintTop_toBottomOf="@id/company_logo"-->
<!--        android:background="@color/colorPrimary"-->
<!--        />-->

    <TextView
        android:id="@+id/company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginHorizontal="5dp"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/company_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:text="Company name" />

    <View
        android:id="@+id/line_below_compName"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/company_name"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/login_branch_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Branch"
        app:layout_constraintTop_toBottomOf="@id/line_below_compName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/colorPrimary"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/loginBranch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="branch name"
        app:layout_constraintTop_toBottomOf="@id/login_branch_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/loginBranch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:background="@color/colorPrimary"/>





</androidx.constraintlayout.widget.ConstraintLayout>